pipeline {
  agent {
    node {
      label 'docker'
    }

  }
  stages {
    stage('Run build') {
      steps {
        configFileProvider([configFile(fileId: 'lineageos-enchilada-env', targetLocation: './.env')]) {}
        mkdir ./zips
        mkdir ./logs
        sh 'docker-compose -f docker-compose.enchilada.yml up --force-recreate --renew-anon-volumes --abort-on-container-exit --exit-code-from lineageos-build-enchilada'
      }
    }

    stage('Archive build artifacts') {
      steps {
        archiveArtifacts 'zips/enchilada/**, logs/**'
      }
    }

    stage('Clean up') {
      steps {
        sh 'docker-compose -f docker-compose.enchilada.yml down --rmi local'
      }
    }

  }
}
